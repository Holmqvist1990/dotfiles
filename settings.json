{
  /*
        APPEARANCE
  */

  "workbench.iconTheme": "material-icon-theme",
  "editor.fontFamily": "Berkeley Mono",
  "workbench.colorTheme": "Houston",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.fontWeight": 100,
  "editor.cursorStyle": "block",
  "editor.cursorBlinking": "solid",
  "editor.guides.indentation": false,

  /*
          BEHAVIOUR
  */

  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",

  /*
          TURNING OFF FEATURES
  */

  "window.titleBarStyle": "custom",
  "window.customMenuBarAltFocus": false,
  "editor.minimap.enabled": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "workbench.startupEditor": "none",
  "html.autoCreateQuotes": false,
  "javascript.preferences.quoteStyle": "single",
  "liveServer.settings.donotShowInfoMsg": true,
  "extensions.ignoreRecommendations": true,

  /*
          FILE SETTINGS
  */

  "files.insertFinalNewline": true,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.hg/store/**": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true
  },
  "files.associations": {
    "*.go": "go",
    "*.html": "html",
    "*.qtpl": "html"
  },

  /*
          TERMINAL
  */

  "terminal.integrated.fontFamily": "monospace",
  "terminal.integrated.scrollback": 25000,
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.enableMultiLinePasteWarning": false,

  /*
          CALVA
  */

  "calva.showCalvaSaysOnStart": false,
  "calva.paredit.hijackVSCodeDefaults": true,
  "calva.jackInEnv": {
    "BREYTA_DEV_USER_ID": "5jyo7slEfBMlnOSaRP8Z1LXFS4a2",
    "BREYTA_SERVICE_ENVIRONMENT": "DEVELOPMENT",
    "AIRBYTE_API_URL": "http://localhost:8001/api",
    "AIRBYTE_DB_URL": "jdbc:postgresql://localhost:9001/airbyte?user=docker&password=docker",
    "DB_POSTGRES_DATABASE": "dev",
    "DB_POSTGRES_HOST": "localhost",
    "DB_POSTGRES_PORT": "3307",
    "DB_POSTGRES_USER": "postgres",
    "GCP_PROJECT": "breyta-dev",
    "GRAPHQL_SERVER_PORT": "8888"
  },

  /*
          LANGUAGE SPECIFIC
  */

  "go.toolsManagement.autoUpdate": true,
  "[go]": {
    "editor.tabSize": 8
  },
  "[lua]": {
    "editor.detectIndentation": false,
    "editor.tabSize": 2
  },
  "rust-analyzer.inlayHints.parameterHints.enable": false,
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "rust-analyzer.inlayHints.closingBraceHints.enable": false,
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "C_Cpp.default.includePath": ["${workspace}/**", "/usr/local/include/**"],
  "security.workspace.trust.untrustedFiles": "open",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[elixir]": {
    "editor.tabSize": 2
  },
  "elixirLS.suggestSpecs": false,
  "terminal.external.linuxExec": "alactritty",
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  /*
          REMOVE ITALICS, BOLD FROM THEMES
  */

  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "comment.block",
          "comment.block.documentation",
          "comment.line",
          "constant",
          "constant.character",
          "constant.character.escape",
          "constant.numeric",
          "constant.numeric.integer",
          "constant.numeric.float",
          "constant.numeric.hex",
          "constant.numeric.octal",
          "constant.other",
          "constant.regexp",
          "constant.rgb-value",
          "emphasis",
          "entity",
          "entity.name",
          "entity.name.class",
          "entity.name.function",
          "entity.name.method",
          "entity.name.section",
          "entity.name.selector",
          "entity.name.tag",
          "entity.name.type",
          "entity.other",
          "entity.other.attribute-name",
          "entity.other.inherited-class",
          "invalid",
          "invalid.deprecated",
          "invalid.illegal",
          "keyword",
          "keyword.control",
          "keyword.operator",
          "keyword.operator.new",
          "keyword.operator.assignment",
          "keyword.operator.arithmetic",
          "keyword.operator.logical",
          "keyword.other",
          "markup",
          "markup.bold",
          "markup.changed",
          "markup.deleted",
          "markup.heading",
          "markup.inline.raw",
          "markup.inserted",
          "markup.italic",
          "markup.list",
          "markup.list.numbered",
          "markup.list.unnumbered",
          "markup.other",
          "markup.quote",
          "markup.raw",
          "markup.underline",
          "markup.underline.link",
          "meta",
          "meta.block",
          "meta.cast",
          "meta.class",
          "meta.function",
          "meta.function-call",
          "meta.preprocessor",
          "meta.return-type",
          "meta.selector",
          "meta.tag",
          "meta.type.annotation",
          "meta.type",
          "punctuation.definition.string.begin",
          "punctuation.definition.string.end",
          "punctuation.separator",
          "punctuation.separator.continuation",
          "punctuation.terminator",
          "storage",
          "storage.modifier",
          "storage.type",
          "string",
          "string.interpolated",
          "string.other",
          "string.quoted",
          "string.quoted.double",
          "string.quoted.other",
          "string.quoted.single",
          "string.quoted.triple",
          "string.regexp",
          "string.unquoted",
          "strong",
          "support",
          "support.class",
          "support.constant",
          "support.function",
          "support.other",
          "support.type",
          "support.type.property-name",
          "support.variable",
          "variable",
          "variable.language",
          "variable.name",
          "variable.other",
          "variable.other.readwrite",
          "variable.parameter",
          "keyword.local.lua",
          "storage.type.numeric.go",
          "support.function.builtin.go",
          "storage.type.error.go",
          "keyword.import.go",
          "keyword.package.go",
          "entity.alias.import.go",
          "punctuation.definition.comment.go",
          "comment.line.double-slash.go",
          "storage.type.string.go",
          "storage.type.boolean.go",
          "source.rust meta.attribute.rust",
          "keyword.control.import.tsx",
          "keyword.control.export.tsx",
          "variable.other.property.tsx",
          "entity.other.attribute-name.tsx"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  "svelte.enable-ts-plugin": true,
  "git.openRepositoryInParentFolders": "never"
}
